clear all;
images = './nucleus_a/nucleus7/';
[Xp, Yp] = size(imread('./nucleus_a/nucleus7/nucleus_z12c3.PNG'));
fromZ = 12;
toZ = 35;
Zp = toZ - fromZ;

[DAPI, FITC, Rh] = deal(zeros(Xp, Yp, Zp));

for i = fromZ:1:toZ
    filename = [images, 'nucleus_z',num2str(i,'%02d'), 'c3.PNG'];
    DAPIImage = rgb2gray(imread(filename));
    chanelIncrementor = 1;
    disp(DAPI(:,:,i-fromZ));
